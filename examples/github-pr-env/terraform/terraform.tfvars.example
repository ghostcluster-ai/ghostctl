# GitHub Configuration
# github_token = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # GitHub Personal Access Token
# github_owner = "acme-corp"                                 # Your GitHub org or username
# repository_name = "my-application"                         # Target repository name

